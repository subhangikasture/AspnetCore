@model Pie

<h3>@Model.Name</h3>

<div class="row gx-5">
	<img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Name" />
	<div class="col-7">	
		<h4>@Model.ShortDescription</h4>
		<p>@Model.LongDescription</p>
		<h3 class="pull-right">@Model.Price.ToString("c")</h3>
		<div class="addToCart">
			<p class="button">

			</p>
		</div>
	</div>
</div>